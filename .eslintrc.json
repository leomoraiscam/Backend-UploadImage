{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "error",
    "linebreak-style": 0,
    "no-unused-expressions": ["error", { "allowTaggedTemplates": true }],
    "no-unused-vars": "warn",
    "no-param-reassign": "off",
    "consistent-return": "warn"
  }
}
